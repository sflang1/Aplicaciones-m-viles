<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sebastinfelipe.ejemplofragments.DrawerActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/containerContenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            </FrameLayout>
        <fragment
            android:name="com.example.sebastinfelipe.ejemplofragments.ListColorFragment"
            android:id="@+id/containerBarra"
            android:layout_width="@dimen/dimen_width_lateralbar"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            tools:layout="@layout/fragment_list_color">

        </fragment>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
